		"mocha:unit": "cross-env NODE_ENV=local PORT=8080 mocha \"test/unit/**/*.test.js\"",
		"test": "npm run mocha:unit && npm run mocha:integration",
		"local": "cross-env NODE_ENV=local PORT=3000 nodemon ./app.js",
		"postlocal": "mongo admin --eval 'db.shutdownServer()' > /dev/null && rm -rf data"
